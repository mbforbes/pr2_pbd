<launch>
	<!-- This runs the basic marker tutorial (for now, for testing). -->
	<!-- $ rosrun interactive_marker_tutorials basic_controls -->
	<node name="basic_marker_controls" pkg="interactive_marker_tutorials" type="basic_controls">
	</node>

	<!-- This runs the interactive marker proxy -->
	<!-- $rosrun interactive_marker_proxy proxy topic_ns:=/basic_controls target_frame:=/rotating_frame -->
	<node name="interactive_marker_proxy" pkg="interactive_marker_proxy" type="proxy" output="screen">
		<remap from="topic_ns" to="/basic_controls" />
		<remap from="target_frame" to="/rotating_frame" />
	</node>

	<!-- This runs the TF2 web republisher. -->
	<!-- $ rosrun tf2_web_republisher tf2_web_republisher -->
	<node name="tf2_web_republisher" pkg="tf2_web_republisher" type="tf2_web_republisher">
	</node>

	<!-- This runs the rosbridge server. -->
	<!-- $ roslaunch rosbridge_server rosbridge_websocket.launch -->
	<include file="$(find rosbridge_server)/launch/rosbridge_websocket.launch" />

	<!-- This runs a simple python server to serve up files (HTML, Javascript). -->
	<node name="python_server" pkg="pr2_pbd_http" type="server.py" output="screen"></node>
</launch>
